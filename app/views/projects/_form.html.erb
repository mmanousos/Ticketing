<%= render "shared/error", object: @project %>

<%= form_for @project do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>  
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit @project.new_record? ? 'Create Project' : 'Update Project' %>  
<% end %>