<% if @project.errors.any? %>
  <p>
    The following <%= pluralize( @project.errors.size, 'error')%> prevented saving your project:
  </p>
  <% @project.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_for @project do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>  
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit @project.new_record? ? 'Create Project' : 'Update Project' %>  
<% end %>